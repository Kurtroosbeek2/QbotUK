{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "version": "1.0.0",
  "id": "708589ad-141e-425d-a6cd-d75b4d2a499a",
  "packageName": "qbot",
  "developer": {
    "name": "Miniemeninstituut",
    "websiteUrl": "https://www.unsw.edu.au/QBot",
    "privacyUrl": "https://www.miniemeninstituut.be/privacy",
    "termsOfUseUrl": "https://www.miniemeninstituut.be"
  },
  "icons": {
    "outline": "Outline.png",
    "color": "Color.png"
  },
  "name": {
    "short": "Mini",
    "full": "Mini - The Community Learning App"
  },
  "description": {
    "short": "QBot",
    "full": "QBot keeps track of answered and unanswered questions, sends notifications to tutors and teachers in charge, and dynamically constructs its own knowledge database on the subject to help suggest answers in future. Just tag @Question in the conversations tab of your class team."
  },
  "accentColor": "#6264A7",
  "bots": [
    {
      "botId": "708589ad-141e-425d-a6cd-d75b4d2a499a",
      "scopes": [
        "team"
      ]
    }
  ],
  "staticTabs": [
    {
      "entityId": "DashboardTab",
      "name": "Dashboard",
      "contentUrl": "https://qbotkurtminiemenleuven-dashboard.azurewebsites.net/home?upn={loginHint}&tid={tid}&gid={groupId}&uid={userObjectId}",
      "scopes": [ "personal" ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [ "qbotkurtminiemenleuven-dashboard.azurewebsites.net", "qbotkurtminiemenleuven.azurewebsites.net" ]
